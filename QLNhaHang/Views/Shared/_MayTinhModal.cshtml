@model QLNhaHang.Models.BanHangViewModel
<div class="modal fade" id="modal-MayTinh" style="display: none;" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Thanh Toán</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="p-4 border rounded">

                    <div class="form-group row">
                        <div class="col-4">
                            <label>Tổng tiền:</label>
                        </div>
                        <div class="col-8">
                            <input class="form-control numbers" id="txtTongTien" value="@Model.TongTien.ToString().Split('.')[0]" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label>Khách đưa:</label>
                        </div>
                        <div class="col-8">
                            <input class="form-control numbers" id="txtKhachDua" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label>Tiền thừa:</label>
                        </div>
                        <div class="col-8">
                            <input class="form-control numbers" id="txtTienThua" readonly />
                        </div>

                    </div>

                </div>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>