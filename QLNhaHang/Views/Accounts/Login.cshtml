@model QLNhaHang.Models.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}


<div class="login-box cursor-pointer">
    <div class="login-logo ">
        <a href=""><b>Saigontourist</b> Login</a>
    </div>
    <!-- /.login-logo -->
    <div class="card ">
        <div class="card-body login-card-body ">

            <form method="post" autocomplete="off">

                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                <div class="input-group mb-3">
                    @Html.TextBoxFor(model => model.Username, null, new { @class = "form-control ", placeholder = "Username" })
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                </div>
                <div class="input-group mb-3">
                    @Html.TextBoxFor(model => model.Password, null, new { @class = "form-control ", type = "password", placeholder = "Password" })
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>
                <div class="row">

                    <button type="submit" class="btn btn-primary btn-block">Sign In</button>

                </div>
            </form>

        </div>
        <!-- /.login-card-body -->
    </div>
</div>
<style>
    .cursor-pointer {
        box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
    }
</style>