@model QLNhaHang.Models.KhachHangViewModel
@using PagedList.Mvc
@{
    ViewBag.Title = "Index";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row ">
            <div class="col-sm-6">
                @*<a class="btn btn-outline-info" href="@Url.Action("Create", "KhachHangs", new { strUrl = Model.StrUrl })"><i class="fas fa-plus"></i>&nbsp; Thêm Mới</a>*@
            </div>
            <div class="col-sm-6">
                @*<ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Danh sách khách hàng</li>
                    </ol>*@
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">
                <i class="fas fa-list-alt text-warning"></i> Danh sách khách hàng

            </h3>

            <div class="card-tools">
                <a class="btn btn-sm btn-outline-info" href="@Url.Action("Create", "KhachHangs", new { strUrl = Model.StrUrl })"><i class="fas fa-plus"></i>Thêm Mới</a>
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body">
            <form action="/KhachHangs/Index" method="get" autocomplete="off" hidden>
                @* HIDDEN *@

                <div class="container" style="padding-bottom:10px; background-color: aliceblue;">
                    @* we will add search criteria *@

                    <div class="col-12">
                        <div class="row" style="padding-top: 10px;">

                            <div class="col-3">
                                Nhập thông tin
                                @*@Html.Editor("searchName", new { htmlAttributes = new { @class = "form-control", @value="@ViewData["currentFilter"]" } })*@
                                <input class="form-control" placeholder="Type name, Id..." name="searchString" value="@ViewBag.searchString" />
                            </div>

                            <input type="hidden" name="maKH" id="hidMaKH" />
                            <input type="hidden" name="page" id="hidPage" />
                            <div class="col-3">
                                <br />
                                <button type="submit" class="btn btn-primary form-control" id="btnSubmit">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
            @*<br />*@

            <div style="overflow-x:auto;">
                @if (Model.KhachHangs.Count != 0)
                {
                    <table class="table mytable text-nowrap" id="listAll">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>@Html.DisplayNameFor(m => m.KhachHangs.FirstOrDefault().MaKH)</th>
                                <th>@Html.DisplayNameFor(m => m.KhachHangs.FirstOrDefault().TenKH)</th>
                                <th>@Html.DisplayNameFor(m => m.KhachHangs.FirstOrDefault().TenDonVi)</th>
                                <th>@Html.DisplayNameFor(m => m.KhachHangs.FirstOrDefault().MaSoThue)</th>
                                <th>@Html.DisplayNameFor(m => m.KhachHangs.FirstOrDefault().Email)</th>
                                <th>@Html.DisplayNameFor(m => m.KhachHangs.FirstOrDefault().Phone)</th>
                                <th>@Html.DisplayNameFor(m => m.KhachHangs.FirstOrDefault().GioiTinh)</th>
                                <th>@Html.DisplayNameFor(m => m.KhachHangs.FirstOrDefault().DiaChi)</th>
                                <th>#</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{int i = 1;}
                            @foreach (var item in Model.KhachHangs)
                            {

                                <tr class="cursor-pointer" @*onclick="location.href = '@(Url.Action("Index", "CapThes", new { maCT = item.MaCapThe }))'"*@>

                                    <td class="tdVal" data-id="@item.MaKH">@i</td>
                                    <td class="tdVal" data-id="@item.MaKH">@Html.DisplayFor(m => item.MaKH)</td>
                                    <td class="tdVal" data-id="@item.MaKH">@Html.DisplayFor(m => item.TenKH)</td>
                                    <td class="tdVal" data-id="@item.MaKH">@Html.DisplayFor(m => item.TenDonVi)</td>
                                    <td class="tdVal" data-id="@item.MaKH">@Html.DisplayFor(m => item.MaSoThue)</td>
                                    <td class="tdVal" data-id="@item.MaKH">@Html.Raw(item.Email)</td>
                                    @*<td class="tdVal" data-id="@item.MaKH">@Html.DisplayFor(m => item.Email)</td>*@
                                    <td class="tdVal" data-id="@item.MaKH">@Html.DisplayFor(m => item.Phone)</td>
                                    <td class="tdVal" data-id="@item.MaKH">@Html.DisplayFor(m => item.GioiTinh)</td>
                                    <td class="tdVal" data-id="@item.MaKH">@Html.DisplayFor(m => item.DiaChi)</td>
                                    <td>
                                        @*<a class="btn btn-primary" href="@Url.Action("Edit", "KhachHangs", new { maKH = item.MaKH, strUrl = Model.StrUrl })"><i class="fas fa-edit"></i></a>*@
                                        <div class="btn-group">
                                            <form action="/KhachHangs/Delete" @*asp-route-id="@item.Id"*@ method="post">

                                                <input type="hidden" name="strUrl" value="@Model.StrUrl" />
                                                <input type="hidden" name="maKH" value="@item.MaKH" />
                                                <span id="confirmDeleteSpan_@item.MaKH" style="display: none">
                                                    <span class="text-dark text-bold">Xóa?</span>
                                                    <button type="submit" class="btn btn-danger">Yes</button>
                                                    <a href="#" class="btn btn-primary" onclick="confirmDelete('@item.MaKH', false)">No</a>
                                                </span>

                                                <span id="deleteSpan_@item.MaKH">
                                                    <a href="#" class="btn btn-danger btn-sm" onclick="confirmDelete('@item.MaKH', true)" title="Xóa"><i class="fas fa-trash-alt"></i></a>
                                                </span>
                                            </form>

                                            <a class="btn btn-sm btn-outline-info" href="@Url.Action("Edit", "KhachHangs", new { strUrl = Model.StrUrl, maKH = item.MaKH })" title="Cập nhật"><i class="fas fa-edit"></i></a>
                                        </div>
                                    </td>
                                </tr>
                                i++;
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <span> Không có dử liệu trong bảng. </span>
                }
                @Html.PagedListPager(Model.KhachHangs, page => Url.Action("Index",
                                new
                                     {
                                         page,
                                         @searchString = @ViewBag.searchString
                                     }))
            </div>

        </div>
    </div>
    <!-- /.card -->
</section>

<!-- Main content -->
<section class="content" hidden>

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            @if (Model.KhachHang != null)
            {
                <h3 class="card-title"><i class="fas fa-list-alt text-warning"></i> Chi tiết khách -<b> @Model.KhachHang.TenKH</b></h3>
            }
            else
            {
                <h3 class="card-title"><i class="fas fa-list-alt text-warning"></i> Chi tiết khách </h3>
            }

            <div class="card-tools">
                <a class="btn btn-sm btn-outline-info" href="@Url.Action("Edit", "KhachHangs", new { strUrl = Model.StrUrl, maKH = Model.KhachHang.MaKH })"><i class="fas fa-edit"></i> Cập nhật</a>
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body">

            <div class="p-4 border rounded">

                <div class="form-group row">

                    <div class="col-2">
                        Mã KH
                        @Html.TextBoxFor(model => model.KhachHang.MaKH, null, new { @class = "form-control ", @readonly = "true" })
                        @Html.ValidationMessageFor(model => model.KhachHang.MaKH, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-2">
                        Họ tên
                        @Html.TextBoxFor(model => model.KhachHang.TenKH, null, new { @class = "form-control ", @readonly = "true" })
                        @Html.ValidationMessageFor(model => model.KhachHang.TenKH, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-2">
                        Email
                        @Html.TextBoxFor(model => model.KhachHang.Email, null, new { @class = "form-control ", @readonly = "true" })
                        @Html.ValidationMessageFor(model => model.KhachHang.Email, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-2">
                        Phone
                        @Html.TextBoxFor(model => model.KhachHang.Phone, null, new { @class = "form-control ", @readonly = "true" })
                        @Html.ValidationMessageFor(model => model.KhachHang.Phone, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-2">
                        MST
                        @Html.TextBoxFor(model => model.KhachHang.MaSoThue, null, new { @class = "form-control ", @readonly = "true" })
                        @Html.ValidationMessageFor(model => model.KhachHang.MaSoThue, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-2">
                        Giới tính
                        @Html.TextBoxFor(model => model.KhachHang.GioiTinh, null, new { @class = "form-control ", @readonly = "true" })
                        @Html.ValidationMessageFor(model => model.KhachHang.GioiTinh, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-6">
                        Địa chỉ
                        @Html.TextAreaFor(model => model.KhachHang.DiaChi, new { @class = "form-control ", @readonly = "true" })
                        @Html.ValidationMessageFor(model => model.KhachHang.DiaChi, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-6">
                        Tên đơn vị
                        @Html.TextAreaFor(model => model.KhachHang.TenDonVi, new { @class = "form-control ", @readonly = "true" })
                        @Html.ValidationMessageFor(model => model.KhachHang.TenDonVi, "", new { @class = "text-danger" })
                    </div>



                </div>

            </div>

        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</section>
<!-- /.content -->

@section Scripts{

    <script src="~/Assets/js/KhachHang/indexController.js"></script>
    <script>
        function confirmDelete(uniqueId, isDeleteClicked) {
            var deleteSpan = 'deleteSpan_' + uniqueId;
            var confirmDeleteSpan = 'confirmDeleteSpan_' + uniqueId;

            if (isDeleteClicked) {
                $('#' + deleteSpan).hide();
                $('#' + confirmDeleteSpan).show();
            } else {
                $('#' + deleteSpan).show();
                $('#' + confirmDeleteSpan).hide();
            }
        }
    </script>

    <script>
        $('#listAll').DataTable({
            "paging": false,
            "lengthChange": true,
            "searching": true,
            "ordering": true,
            "info": true,
            "autoWidth": false,
        });
    </script>

    <style>
        .cursor-pointer:hover {
            /*background-color: #3E5C9A;*/
            background-color: #ffc107 !important;
            cursor: pointer;
            color: white;
        }

        /*.cursor-pointer {
            box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
        }*/

        #listAll {
            box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
        }

        .hoverClass {
            background-color: #3E5C9A;
            color: white;
        }
    </style>
}

