@model QLNhaHang.Models.ChiTietHoaDonViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage_HauCan.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row ">
            <div class="col-sm-6">
                @*<a class="btn btn-outline-info" href="@Url.Action("Create", "KhachHangs", new { strUrl = Model.StrUrl })"><i class="fas fa-plus"></i>&nbsp; Thêm Mới</a>*@
            </div>
            <div class="col-sm-6">
                @*<ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Danh sách khách hàng</li>
                    </ol>*@
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">
                <i class="fas fa-list-alt text-warning"></i> Danh sách chi tiết hd
            </h3>

            <div class="card-tools">
                @*@if (Session["role"].ToString() == "Admins")
                    {
                        <a class="btn btn-sm btn-outline-info" href="@Url.Action("Create", "VanPhongs", new { strUrl = Model.StrUrl })"><i class="fas fa-plus"></i>Thêm Mới</a>
                    }*@

                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body">
            @*<form action="/VanPhongs/Index" method="get" autocomplete="off" hidden>

                    <div class="container" style="padding-bottom:10px; background-color: aliceblue;">

                        <div class="col-12">
                            <div class="row" style="padding-top: 10px;">

                                <div class="col-3">
                                    Nhập thông tin
                                    <input class="form-control" placeholder="Type name, Id..." name="searchString" value="@ViewBag.searchString" />
                                </div>

                                <input type="hidden" name="id" id="hidId" />
                                <input type="hidden" name="page" id="hidPage" />
                                <div class="col-3">
                                    <br />
                                    <button type="submit" class="btn btn-primary form-control" id="btnSubmit">
                                        <i class="fas fa-search"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>*@

            <div style="overflow-x:auto;">
                @if (Model.ChiTietHDs.Count() != 0)
                {
                    <table class="table mytable text-nowrap" id="listAll">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>@Html.DisplayNameFor(m => m.ChiTietHDs.FirstOrDefault().MaCTHD)</th>
                                <th>@Html.DisplayNameFor(m => m.ChiTietHDs.FirstOrDefault().MaHD)</th>
                                <th>@Html.DisplayNameFor(m => m.ChiTietHDs.FirstOrDefault().HoaDon.NgayTao)</th>
                                <th>@Html.DisplayNameFor(m => m.ChiTietHDs.FirstOrDefault().ThucDon.TenMon)</th>
                                <th>@Html.DisplayNameFor(m => m.ChiTietHDs.FirstOrDefault().SoLuong)</th>
                                <th>@Html.DisplayNameFor(m => m.ChiTietHDs.FirstOrDefault().DonGia)</th>
                                <th>Thành tiền</th>
                                @if (Session["role"].ToString() == "Admins")
                                {
                                    <th>#</th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @{int i = 1;}
                            @foreach (var item in Model.ChiTietHDs)
                            {

                                <tr class="cursor-pointer" @*onclick="location.href = '@(Url.Action("Index", "CapThes", new { maCT = item.MaCapThe }))'"*@>

                                    <td>@i</td>
                                    <td>@Html.DisplayFor(m => item.MaCTHD)</td>
                                    <td>@Html.DisplayFor(m => item.MaHD)</td>
                                    <td>@Html.DisplayFor(m => item.HoaDon.NgayTao)</td>
                                    <td>@Html.DisplayFor(m => item.ThucDon.TenMon)</td>
                                    <td>@Html.DisplayFor(m => item.SoLuong)</td>
                                    <td>@string.Format("{0:0,0}", item.DonGia)</td>
                                    <td>@string.Format("{0:0,0}", item.DonGia * item.SoLuong)</td>
                                    @if (Session["role"].ToString() == "Admins")
                                    {
                                        <td>
                                            <div class="btn-group ">
                                                <form action="/ChiTietHDs/Delete" method="post">

                                                    <input type="hidden" name="maCTHD" value="@item.MaCTHD" />
                                                    <span id="confirmDeleteSpan_@item.MaCTHD" style="display: none">
                                                        <span class="text-dark text-bold">Xóa?</span>
                                                        <button type="submit" class="btn btn-danger">Yes</button>
                                                        <a href="#" class="btn btn-primary" onclick="confirmDelete('@item.MaCTHD', false)">No</a>
                                                    </span>

                                                    <span id="deleteSpan_@item.MaCTHD">
                                                        <a href="#" class="btn btn-danger btn-sm" onclick="confirmDelete('@item.MaCTHD', true)"><i class="fas fa-trash-alt"></i></a>
                                                    </span>
                                                </form>


                                            </div>
                                        </td>
                                    }

                                </tr>
                                i++;
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <span> Không có dử liệu trong bảng. </span>
                }
                @*@Html.PagedListPager(Model.VanPhongs, page => Url.Action("Index",
                    new
                         {
                             page,
                             @searchString = @ViewBag.searchString
                         }))*@
            </div>

        </div>
    </div>
    <!-- /.card -->
</section>


@section Scripts{

    @*<script src="~/Assets/js/ChiTietHD/indexController.js"></script>*@
    <script>
        function confirmDelete(uniqueId, isDeleteClicked) {
            var deleteSpan = 'deleteSpan_' + uniqueId;
            var confirmDeleteSpan = 'confirmDeleteSpan_' + uniqueId;

            if (isDeleteClicked) {
                $('#' + deleteSpan).hide();
                $('#' + confirmDeleteSpan).show();
            } else {
                $('#' + deleteSpan).show();
                $('#' + confirmDeleteSpan).hide();
            }
        }
    </script>
    <script>
        $('#listAll').DataTable({
            "paging": true,
            "lengthChange": true,
            "searching": true,
            "ordering": true,
            "info": true,
            "autoWidth": true,
        });
    </script>
    <style>
        .cursor-pointer:hover {
            /*background-color: #3E5C9A;*/
            background-color: #ffc107 !important;
            cursor: pointer;
            color: white;
        }

        /*.cursor-pointer {
            box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
        }*/

        #listAll {
            box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
        }

        .hoverClass {
            background-color: #3E5C9A;
            color: white;
        }
    </style>
}



