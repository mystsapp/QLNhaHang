@model QLNhaHang.Models.ThongKeViewModel

@{
    ViewBag.Title = "TheoNgay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                @*<a class="btn btn-outline-info" asp-action="Create" asp-route-strUrl="#"><i class="fas fa-plus"></i>&nbsp; Thêm Mới</a>*@
            </div>
            <div class="col-sm-6">
                @*<ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Danh Sách Cấp Thẻ</li>
                    </ol>*@
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>


<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title"><i class="fas fa-list-alt text-warning"></i> Thống kê theo ngày</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group row">

                        <div class="col-md-2">
                            @Html.LabelFor(model => model.TuNgay, htmlAttributes: new { @class = "control-label" })
                            @Html.TextBoxFor(model => model.TuNgay, null, new { @class = "form-control maskInput", @value = ViewBag.searchFromDate })
                            @Html.ValidationMessageFor(model => model.TuNgay, "", new { @class = "text-danger" })
                        </div>


                        <div class="col-md-2">
                            @Html.LabelFor(model => model.DenNgay, htmlAttributes: new { @class = "control-label" })
                            @Html.TextBoxFor(model => model.DenNgay, null, new { @class = "form-control maskInput", @value = ViewBag.searchToDate })
                            @Html.ValidationMessageFor(model => model.DenNgay, "", new { @class = "text-danger" })
                        </div>

                        <div class="col-md-2">
                            @Html.LabelFor(model => model.VanPhongId, htmlAttributes: new { @class = "control-label" })
                            @Html.DropDownListFor(model => model.VanPhongId,
                                                    new SelectList(Model.VanPhongs, "Id", "Name", @ViewBag.vanPhong),
                                                    htmlAttributes: new { @class = "form-control border-input " })
                        </div>
                        
                        <div class="col-md-2">
                            @Html.LabelFor(model => model.DaIn, htmlAttributes: new { @class = "control-label" })
                            @Html.DropDownListFor(model => model.DaIn,
                                                    new SelectList(Model.DaInModels, "Id", "Name", @ViewBag.daIn),
                                                    htmlAttributes: new { @class = "form-control border-input " })
                        </div>
                        <div class="form-group">

                            <div class="col-md-offset-2 col-md-10">
                                <label class="control-label"><br /></label>
                                <input type="submit" value="Create" class="btn btn-default" />
                            </div>
                        </div>
                    </div>


                </div>
            }

        </div>
    </div>
    <!-- /.card -->
</section>


