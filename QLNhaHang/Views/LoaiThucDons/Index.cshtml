                                <th>@Html.DisplayNameFor(m => m.ThucDons.FirstOrDefault().LoaiThucDon.TenLoai)</th>
                                <th>@Html.DisplayNameFor(m => m.ThucDons.FirstOrDefault().GhiChu)</th>
