@model QLNhaHang.Models.LoaiThucDonViewModel
@using PagedList.Mvc
@{
    ViewBag.Title = "Index";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row ">
            <div class="col-sm-6">
                @*<a class="btn btn-outline-info" href="@Url.Action("Create", "KhachHangs", new { strUrl = Model.StrUrl })"><i class="fas fa-plus"></i>&nbsp; Thêm Mới</a>*@
            </div>
            <div class="col-sm-6">
                @*<ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Danh sách khách hàng</li>
                    </ol>*@
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">
                <i class="fas fa-list-alt text-warning"></i> Danh sách Loại

            </h3>

            <div class="card-tools">
                <a class="btn btn-sm btn-outline-info" href="@Url.Action("Create", "LoaiThucDons", new { strUrl = Model.StrUrl })"><i class="fas fa-plus"></i>Thêm Mới</a>
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body">
            <form action="/LoaiThucDons/Index" method="get" autocomplete="off" hidden>
                @* HIDDEN *@

                <div class="container" style="padding-bottom:10px; background-color: aliceblue;">

                    <div class="col-12">
                        <div class="row" style="padding-top: 10px;">

                            <div class="col-3">
                                Nhập thông tin
                                <input class="form-control" placeholder="Type name, Id..." name="searchString" value="@ViewBag.searchString" />
                            </div>

                            <input type="hidden" name="id" id="hidId" />
                            <input type="hidden" name="page" id="hidPage" />
                            <div class="col-3">
                                <br />
                                <button type="submit" class="btn btn-primary form-control" id="btnSubmit">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
            @*<br />*@

            <div style="overflow-x:auto;">
                @if (Model.LoaiThucDons.Count != 0)
                {
                    <table class="table mytable text-nowrap" id="listAll">
                        <thead>
                            <tr>
                                <th>STT</th>

                                <th>@Html.DisplayNameFor(m => m.LoaiThucDons.FirstOrDefault().TenLoai)</th>
                                @*<th>@Html.DisplayNameFor(m => m.LoaiThucDons.FirstOrDefault().PhuPhi)</th>*@
                                <th>@Html.DisplayNameFor(m => m.LoaiThucDons.FirstOrDefault().MoTa)</th>
                                <th>@Html.DisplayNameFor(m => m.LoaiThucDons.FirstOrDefault().GhiChu)</th>
                                <th>#</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{int i = 1;}
                            @foreach (var item in Model.LoaiThucDons)
                            {

                                <tr class="cursor-pointer" @*onclick="location.href = '@(Url.Action("Index", "CapThes", new { maCT = item.MaCapThe }))'"*@>

                                    <td class="tdVal" data-id="@item.Id">@i</td>
                                    <td class="tdVal" data-id="@item.Id">@Html.DisplayFor(m => item.TenLoai)</td>
                                    @*<td class="tdVal" data-id="@item.Id">@string.Format("{0:0,0}", item.PhuPhi)</td>*@
                                    <td class="tdVal" data-id="@item.Id">@Html.DisplayFor(m => item.MoTa)</td>
                                    <td class="tdVal" data-id="@item.Id">@Html.DisplayFor(m => item.GhiChu)</td>

                                    <td>
                                        @*<a class="btn btn-primary" href="@Url.Action("Edit", "KhachHangs", new { maKH = item.MaKH, strUrl = Model.StrUrl })"><i class="fas fa-edit"></i></a>*@
                                        <div class="btn-group">
                                            <form action="/LoaiThucDons/Delete" @*asp-route-id="@item.Id"*@ method="post">

                                                <input type="hidden" name="strUrl" value="@Model.StrUrl" />
                                                <input type="hidden" name="id" value="@item.Id" />
                                                <span id="confirmDeleteSpan_@item.Id" style="display: none">
                                                    <span class="text-dark text-bold">Xóa?</span>
                                                    <button type="submit" class="btn btn-danger">Yes</button>
                                                    <a href="#" class="btn btn-primary" onclick="confirmDelete('@item.Id', false)">No</a>
                                                </span>

                                                <span id="deleteSpan_@item.Id">
                                                    <a href="#" class="btn btn-danger btn-sm" onclick="confirmDelete('@item.Id', true)" title="Xóa"><i class="fas fa-trash-alt"></i></a>
                                                </span>
                                            </form>

                                            <a class="btn btn-sm btn-outline-info" href="@Url.Action("Edit", "LoaiThucDons", new { strUrl = Model.StrUrl, id = item.Id })" title="Cập nhật"><i class="fas fa-edit"></i></a>
                                        </div>
                                    </td>
                                </tr>
                                i++;
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <span> Không có dử liệu trong bảng. </span>
                }
                @Html.PagedListPager(Model.LoaiThucDons, page => Url.Action("Index",
                                new
                                     {
                                         page,
                                         @searchString = @ViewBag.searchString
                                     }))
            </div>

        </div>
    </div>
    <!-- /.card -->
</section>

<!-- Main content -->
