@model QLNhaHang.Models.ThongTinHDViewModel
@using PagedList.Mvc
@{
    ViewBag.Title = "Index";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row ">
            <div class="col-sm-6">
                @*<a class="btn btn-outline-info" href="@Url.Action("Create", "KhachHangs", new { strUrl = Model.StrUrl })"><i class="fas fa-plus"></i>&nbsp; Thêm Mới</a>*@
            </div>
            <div class="col-sm-6">
                @*<ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Danh sách khách hàng</li>
                    </ol>*@
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">
                <i class="fas fa-list-alt text-warning"></i> Danh sách thông tin HD

            </h3>

            <div class="card-tools">
                <a class="btn btn-sm btn-outline-info" href="@Url.Action("Create", "ThongTinHDs", new { strUrl = Model.StrUrl })"><i class="fas fa-plus"></i>Thêm Mới</a>
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body">
            <form action="/ThongTinHDs/Index" method="get" autocomplete="off">

                <div class="container" style="padding-bottom:10px; background-color: aliceblue;">
                    @* we will add search criteria *@

                    <div class="col-12">
                        <div class="row" style="padding-top: 10px;">

                            <div class="col-3">
                                Nhập thông tin
                                @*@Html.Editor("searchName", new { htmlAttributes = new { @class = "form-control", @value="@ViewData["currentFilter"]" } })*@
                                <input class="form-control" placeholder="Type name, Id..." name="searchString" value="@ViewBag.searchString" />
                            </div>

                            <input type="hidden" name="id" id="hidTTHD" />
                            <input type="hidden" name="page" id="hidPage" />
                            <div class="col-3">
                                <br />
                                <button type="submit" class="btn btn-primary form-control" id="btnSubmit">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
            <br />

            <div style="overflow-x:auto;">
                @if (Model.ThongTinHDs != null)
                {
                    <table class="table mytable text-nowrap" id="listAll">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>@Html.DisplayNameFor(m => m.ThongTinHDs.FirstOrDefault().MauSo)</th>
                                <th>@Html.DisplayNameFor(m => m.ThongTinHDs.FirstOrDefault().KyHieu)</th>
                                <th>@Html.DisplayNameFor(m => m.ThongTinHDs.FirstOrDefault().QuyenSo)</th>
                                <th>@Html.DisplayNameFor(m => m.ThongTinHDs.FirstOrDefault().So)</th>
                                <th>@Html.DisplayNameFor(m => m.ThongTinHDs.FirstOrDefault().SoThuTu)</th>
                                <th>#</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{int i = 1;}
                            @foreach (var item in Model.ThongTinHDs)
                            {

                                <tr class="cursor-pointer" @*onclick="location.href = '@(Url.Action("Index", "CapThes", new { maCT = item.MaCapThe }))'"*@>

                                    <td class="tdVal" data-id="@item.Id">@i</td>
                                    <td class="tdVal" data-id="@item.Id">@Html.DisplayFor(m => item.MauSo)</td>
                                    <td class="tdVal" data-id="@item.Id">@Html.DisplayFor(m => item.KyHieu)</td>
                                    <td class="tdVal" data-id="@item.Id">@Html.DisplayFor(m => item.QuyenSo)</td>
                                    <td class="tdVal" data-id="@item.Id">@Html.DisplayFor(m => item.So)</td>
                                    <td class="tdVal" data-id="@item.Id">@Html.DisplayFor(m => item.SoThuTu)</td>
                                    
                                    <td>
                                        @*<a class="btn btn-primary" href="@Url.Action("Edit", "KhachHangs", new { maKH = item.MaKH, strUrl = Model.StrUrl })"><i class="fas fa-edit"></i></a>*@
                                        <form action="/ThongTinHDs/Delete" @*asp-route-id="@item.Id"*@ method="post">

                                            <input type="hidden" name="strUrl" value="@Model.StrUrl" />
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <span id="confirmDeleteSpan_@item.Id" style="display: none">
                                                <span class="text-dark text-bold">Xóa?</span>
                                                <button type="submit" class="btn btn-danger">Yes</button>
                                                <a href="#" class="btn btn-primary" onclick="confirmDelete('@item.Id', false)">No</a>
                                            </span>

                                            <span id="deleteSpan_@item.Id">
                                                <a href="#" class="btn btn-danger btn-sm" onclick="confirmDelete('@item.Id', true)"><i class="fas fa-trash-alt"></i></a>
                                            </span>
                                        </form>
                                    </td>
                                </tr>
                                i++;
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <span> No data. </span>
                }
                @Html.PagedListPager(Model.ThongTinHDs, page => Url.Action("Index",
                                new
                                     {
                                         page,
                                         @searchString = @ViewBag.searchString
                                     }))
            </div>

        </div>
    </div>
    <!-- /.card -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            @if (Model.ThongTinHD != null)
            {
                <h3 class="card-title"><i class="fas fa-list-alt text-warning"></i> Chi tiết HD -<b> @Model.ThongTinHD.KyHieu</b></h3>
            }
            else
            {
                <h3 class="card-title"><i class="fas fa-list-alt text-warning"></i> Chi tiết HD </h3>
            }

            <div class="card-tools">
                <a class="btn btn-sm btn-outline-info" href="@Url.Action("Edit", "ThongTinHDs", new { strUrl = Model.StrUrl, id = Model.ThongTinHD.Id })"><i class="fas fa-edit"></i> Cập nhật</a>
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body">

            <div class="p-4 border rounded">

                <div class="form-group row">

                    <div class="col-2">
                        Mẩu số
                        @Html.TextBoxFor(model => model.ThongTinHD.MauSo, null, new { @class = "form-control ", @readonly = "true" })
                        @Html.ValidationMessageFor(model => model.ThongTinHD.MauSo, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-2">
                        Ký Hiệu
                        @Html.TextBoxFor(model => model.ThongTinHD.KyHieu, null, new { @class = "form-control ", @readonly = "true" })
                        @Html.ValidationMessageFor(model => model.ThongTinHD.KyHieu, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-2">
                        Quyển số
                        @Html.TextBoxFor(model => model.ThongTinHD.QuyenSo, null, new { @class = "form-control ", @readonly = "true" })
                        @Html.ValidationMessageFor(model => model.ThongTinHD.QuyenSo, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-2">
                        Số
                        @Html.TextBoxFor(model => model.ThongTinHD.So, null, new { @class = "form-control ", @readonly = "true" })
                        @Html.ValidationMessageFor(model => model.ThongTinHD.So, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-2">
                        Số Thứ Tự
                        @Html.TextBoxFor(model => model.ThongTinHD.SoThuTu, null, new { @class = "form-control ", @readonly = "true" })
                        @Html.ValidationMessageFor(model => model.ThongTinHD.SoThuTu, "", new { @class = "text-danger" })
                    </div>

                    
                </div>

            </div>

        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</section>
<!-- /.content -->

@section Scripts{

    <script src="~/Assets/js/ThongTinHD/indexController.js"></script>
    <script>
        function confirmDelete(uniqueId, isDeleteClicked) {
            var deleteSpan = 'deleteSpan_' + uniqueId;
            var confirmDeleteSpan = 'confirmDeleteSpan_' + uniqueId;

            if (isDeleteClicked) {
                $('#' + deleteSpan).hide();
                $('#' + confirmDeleteSpan).show();
            } else {
                $('#' + deleteSpan).show();
                $('#' + confirmDeleteSpan).hide();
            }
        }
    </script>
    <style>
        .cursor-pointer:hover {
            /*background-color: #3E5C9A;*/
            background-color: #ffc107 !important;
            cursor: pointer;
            color: white;
        }

        .cursor-pointer {
            box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
        }

        .hoverClass {
            background-color: #3E5C9A;
            color: white;
        }
    </style>
}

